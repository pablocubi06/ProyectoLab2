html(lang="en")
  head
    meta(charset="UTF-8")
    link(rel="stylesheet", href="/public/css/fondoCont.css")
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css", rel="stylesheet", integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC", crossorigin="anonymous")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Determinaciones
  body
    header
      h3.text-center Determinaciones
    body(background="/images/bioquimica-1920x1280.jpg")
      .row
        .col-6
          form.d-flex.container
            input.form-control.me-2(type="search", placeholder="Nombre ", aria-label="Search")
            button.btn.btn-outline-info(type="submit") Buscar
        .col-5
          figure.text-center
            blockquote.blockquote
              h5 Determinación
            figcaption.blockquote-footer
              AGREGAR NUEVA DETERMINACION A UNA TIPO DE EXAMEN
             
          .fondo.container
            form.row.g-3
              .col-md-12
                label.form-label(for="inputState") Examen
                select#inputState.form-select
                  option(selected) Elige un tipo de examen
                  option
              .col-12
                label.form-label(for="inputAddress") Nombre de la determinación
                input(type="text", class="form-control", id="inputAddress", placeholder="Ejemplo: glucosa")
              .col-md-6
                label.form-label(for="inputEmail4") Unidad de medida a utilizar
                input(type="text", class="form-control", id="inputEmail4")
              .col-8
                button(type="submit", class="btn btn-info") Enviar
              .col-12
                button(type="submit", class="btn btn-info") Volver al menú principal