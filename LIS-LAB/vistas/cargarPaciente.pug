doctype html
html
  head
    link(rel="stylesheet", href="/css/style.css")
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous")
    title Carga de Pacientes
  body
    .row
      .col-2
      .col-4
        figure.text-center
          blockquote
            h3 Paciente.
          blockquote
          figcaption.blockquote-footer AGREGAR NUEVO <cite title="Source Title"> PACIENTE</cite>
        figure

    form.row.g-3(action="/cargar-paciente", method="post")
      label(for="dni") DNI:
      input(type="text", name="dni", required)

      label(for="apellido") Apellido:
      input(type="text", name="apellido", required)

      label(for="nombre") Nombre:
      input(type="text", name="nombre", required)

      label(for="sexo") Sexo:
      select(name="sexo")
        option(value="masculino") Masculino
        option(value="femenino") Femenino

      label(for="fecha_nac") Fecha de Nacimiento:
      input(type="date", name="fecha_nac", required)

      label(for="embarazada") Embarazada:
      select(name="embarazada")
        option(value="false") No
        option(value="true") Si

      label(for="diagnostico") Diagnóstico:
      input(type="text", name="diagnostico")

      label(for="patolog_prev") Patología Previa:
      input(type="text", name="patolog_prev")

      label(for="email") Correo Electrónico:
      input(type="email", name="email")

      label(for="telefono") Teléfono:
      input(type="text", name="telefono")

      button(type="submit") Cargar Paciente