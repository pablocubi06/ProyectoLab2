html(lang="en")
  head
    meta(charset="UTF-8")
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js")
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css", rel="stylesheet")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")  
    link(rel="stylesheet", href="/css/style.css")  
    title Document
  body
    .row
      .col-2
      .col-8
        figure(class="text-center")
          blockquote.blockquote
            h3(class="blockquote-footer") Agregar nueva ORDEN
        form(class="row g-2"action="/cargarOrden", method="post" )
          .col-4
            label(for="inputAddress", class="form-label") Fecha de ingreso
            input(type="date", class="form-control", id="fechaInput")
          .col-4
            label(for="inputAddress", class="form-label") Fecha de entrega
            input(type="date", class="form-control", id="entrega", disabled)
          .col-2
            label(for="inputAddress", class="form-label") DNI paciente
            input(type="text", class="form-control", id="dni",value=persona.dni, disabled)
          .col-5
            label(for="inputAddress", class="form-label") Apellido del paciente
            input(type="text", class="form-control", id="inputAddress",value=persona.apellido, disabled)
          .col-5
            label(for="inputAddress", class="form-label") Nombre del paciente
            input(type="text", class="form-control", id="inputAddress",value=persona.nombre, disabled)
          .col-md-6
            label(for="inputEmail4", class="form-label") Dias de demora
            input(type="text", class="form-control", id="dias")
          form(class="row g-2")
                  
          .col-6
            label(for="inputAddress", class="form-label") Buscar Examen
            input(type="text", class="form-control", id="valor")
          .col-8 
              table.table.table-bordered
                thead
                    tr
                    th ID
                    th Codigo
                    th Nombre
                    th Tipo de Muestra 
                    th Accion 
                tbody(id="examenes")
                      
          .col-6
            h2 Examen agregado
            table.table.table-bordered
                thead
                    tr
                    th ID
                    th Codigo
                    th Nombre
                    th Tipo de Muestra                             
                tbody(id="seleccionados")
                 
              
          .col-12
           
            button(type="submit", class="btn btn-info") Generar orden
              
    script(src="/script/fechaActual.js") 
    script(src="/script/cargarExamenes.js") 